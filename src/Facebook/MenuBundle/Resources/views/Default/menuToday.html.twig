
{% extends "FacebookMenuBundle::layout.html.twig" %}

{% block title %} Menu du jour{% endblock %}

{% block body %}
        <div id="content">

        	{% for data in allMenu %}
           	<h1>{{data.resto_name}}</h1>
           	<div class="row">
           		{% for menu in data.content %}
	                <div class="col-md-3 menu_content">   
	                    <h3> 
	                    {% if menu.is_today_menu %} 
	                    	Menu aujourd'hui
	                    {% else %}
	                    	{{ menu.title | raw }}
	                    {% endif %}
	                    </h3>

	                    {% if menu.founded_fav_dish|length > 0 %}
	                    	<p class="alert alert-success">
	                    		<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
	                    		<strong>
			                    	Sp√©cialement pour vous :
					                {% for fav_dish in menu.founded_fav_dish %}
					                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
					                    {{ fav_dish }}
					                {% endfor %}
			                	</strong>
	                    	</p>
			                
			            {% endif %} 
	                           
		  				<img src="{{ menu.full_picture }}" alt="Dish" class="col-xs-4 picture " />
						<p>
			                {{ menu.list_menu | raw }}		                                 
			            </p> 
			            </div>
	            {% endfor %}
           	</div>
           	{% endfor %}
            
                
        </div>
{% endblock %}